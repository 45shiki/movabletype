<mt:setvar name="page_title" value="<__trans phrase="Edit Image">">

<mt:setvarblock name="html_head" prepend="1">
<style type="text/css">
button.editor-button {
  width: 30px;
  height: 30px;
  padding: 0px;
}
div.editor-column {
  margin-bottom: 5px;
}
div.editor-subcolumn {
  margin-bottom: 5px;
  margin-left: 20px;
}
#editor {
  margin-left: 250px;
}
#image {
  width: 250px;
  height: 250px;
  float: left;
}
</style>
</mt:setvarblock>

<mt:setvarblock name="js_include" append="1">
  <script type="text/javascript" src="<mt:var name="static_uri">js/image_editor/fabric.js"></script>
  <script type="text/javascript" src="<mt:var name="static_uri">js/image_editor/darkroom.min.js"></script>
  <script type="text/javascript" src="<mt:var name="static_uri">js/image_editor/jquery.numeric.min.js"></script>
  <script type="text/javascript" src="<mt:var name="static_uri">js/image_editor/image_editor.js"></script>
</mt:setvarblock>

<mt:include name="dialog/header.tmpl">

    <div id="image-editor">

      <div id="image">
        <img src="<mt:var name="thumbnail_url" escape="html">?ts=<mt:var name="modified_on" escape="url">" width="<mt:var name="thumbnail_width" escape="html">" height="<mt:var name="thumbnail_height" escape="html">" />
      </div>

      <div id="editor">

        <div class="editor-column">
          <__trans phrase="W:">
          <input id="resize-width" class="text number min" type="text" value="<mt:var name="image_width">" />
          <__trans phrase="H:">
          <input id="resize-height" class="text number min" type="text" value="<mt:var name="image_height">" />
          <button id="resize-apply" class="button enable-submit disabled" disabled="disabled"><__trans phrase="Apply"></button>
          <button id="resize-reset" class="button disabled" disabled="disabled"><__trans phrase="Reset"></button>
        </div>
        <div class="editor-subcolumn">
          <input id="keep-aspect-ratio" class="cb" type="checkbox" value="1" checked="checked" />
          <label for="keep-aspect-ratio"><__trans phrase="Keep aspect ratio"></label>
        </div>

        <mt:if name="has_gps_metadata">
        <div class="editor-column">
          <input id="remove-gps-metadata" class="cb enable-submit" type="checkbox" />
          <label for="remove-gps-metadata"><__trans phrase="Remove GPS metadata"></label>
        </div>
        </mt:if>

        <mt:if name="has_exif_metadata">
        <div class="editor-column">
          <input id="remove-exif-metadata" class="cb enable-submit" type="checkbox" />
          <label for="remove-exif-metadata"><__trans phrase="Remove EXIF metadata"></label>
        </div>
        </mt:if>

        <div class="editor-column">
          <button class="button editor-button enable-submit" title="<__trans phrase="Rotate right">" onclick="image.rotate(90);">
            <img alt="Rotate right" src="<mt:var name="static_uri">images/image_editor/rotate_right@2x.png" width="24" height="24" />
          </button>
          <button class="button editor-button enable-submit" title="<__trans phrase="Rotate left">" onclick="image.rotate(-90);">
            <img alt="Rotate left" src="<mt:var name="static_uri">images/image_editor/rotate_left@2x.png" width="24" height="24" />
          </button>
          <button class="button editor-button enable-submit" title="<__trans phrase="Flip horizontal">" onclick="image.flipHorizontal();">
            <img alt="Flip horizontal" src="<mt:var name="static_uri">images/image_editor/flip_horizontal@2x.png" width="24" height="24" />
          </button>
          <button class="button editor-button enable-submit" title="<__trans phrase="Flip vertical">" onclick="image.flipVertical();">
            <img alt="Flip vertical" src="<mt:var name="static_uri">images/image_editor/flip_vertical@2x.png" width="24" height="24" />
          </button>
          <button id="crop" class="button editor-button enable-submit disabled" disabled="disabled" title="<__trans phrase="Crop">" onclick="image.crop();">
            <img alt="Crop" src="<mt:var name="static_uri">images/image_editor/crop@2x.png" width="24" height="24" />
          </button>
        </div>

        <div class="editor-column">
          <button id="undo" class="button disabled" disabled="disabled" onclick="image.undo();"><__trans phrase="Undo"></button>
          <button id="redo" class="button disabled" disabled="disabled" onclick="image.redo();"><__trans phrase="Redo"></button>
        </div>

      </div><!-- /editor -->

    </div><!-- /image-editor -->

    <div class="dialog actions-bar actions-bar-bottom">
      <form action="<mt:var name="script_url">" method="post" target="_parent" onsubmit="return false">
        <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />
        <input type="hidden" name="__mode" value="transform_image" />
        <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
        <input type="hidden" name="id" value="<mt:var name="id">" />

        <input type="hidden" name="remove_gps_metadata" />
        <input type="hidden" name="remove_exif_metadata" />
        <input type="hidden" name="actions" />

        <button
           type="submit"
           accesskey="s"
           title="<__trans phrase="Save (s)">"
           class="action primary button close disabled"
           disabled="disabled">
          <__trans phrase="Save"></button>
        <button
           type="submit"
           accesskey="x"
           class="cancel action button image-editor-close-dialog"
           title="<__trans phrase="Cancel (x)">">
          <__trans phrase="Cancel"></button>
      </form>
    </div>

<mt:setvarblock name="jq_js_include" append="1">
    jQuery(document).ready(function() {
        var resized = false;

        var resizeWidth = jQuery('input#resize-width').val();
        var resizeHeight = jQuery('input#resize-height').val();

        // Resize image when clicking apply button.
        jQuery('button#resize-apply').click(function() {
            resized = true;

            resizeWidth = jQuery('input#resize-width').val();
            resizeHeight = jQuery('input#resize-height').val();

            image.resize(resizeWidth, resizeHeight);

            // Disable resize buttons.
            disableButton(this);
            disableButton('button#resize-reset');
        });

        // Reset resize-width and resize-height when clicking reset button.
        jQuery('button#resize-reset').click(function() {
            var width = image.getWidth(),
                height = image.getHeight();
            jQuery('input#resize-width').val(width);
            jQuery('input#resize-height').val(height);

            // Disable resize buttons.
            disableButton('button#resize-apply');
            disableButton(this);
        });

        // Update resize-width or resize-height when changing them.
        jQuery('input#resize-width')
            .numeric()
            .keyup(function(event) {
                // No change.
                if (jQuery('input#resize-width').val() === resizeWidth) {
                    return;
                }

                if (event.keyCode === 13) {  // enter
                    jQuery('button#resize-apply').trigger('click');
                    return;
                }

                // Enable resize buttons.
                enableButton('button#resize-apply');
                enableButton('button#resize-reset');
    
                // Do not update when "Keep aspect ratio" checked.
                if (jQuery('input#keep-aspect-ratio:checked').length === 0) {
                    return;
                }
    
                var width = jQuery(this).val();
                var height;
                if (image.getAngle() % 180 === 0) {
                    height = Math.ceil(width * image.originalHeight / image.originalWidth);
                } else {
                    height = Math.ceil(width * image.originalWidth / image.originalHeight);
                }
                jQuery('input#resize-height').val(height);
            });
        jQuery('input#resize-height')
            .numeric()
            .keyup(function() {
                // No change.
                if (jQuery('input#resize-height').val() === resizeHeight) {
                    return;
                }

                if (event.keyCode === 13) {  // enter
                    jQuery('button#resize-apply').trigger('click');
                    return;
                }

                // Enable resize buttons.
                enableButton('button#resize-apply');
                enableButton('button#resize-reset');
    
                // Do not update when "Keep aspect ratio" checked.
                if (jQuery('input#keep-aspect-ratio:checked').length === 0) {
                    return;
                }
    
                var height = jQuery(this).val();
                var width;
                if (image.getAngle() % 180 === 0) {
                    width = Math.ceil(height * image.originalWidth / image.originalHeight);
                } else {
                    width = Math.ceil(height * image.originalHeight / image.originalWidth);
                }
                jQuery('input#resize-width').val(width);
        });

        // Also check "Remove GPS metadata" when checking "Remove EXIF metadata".
        var gpsPreviousState;
        jQuery('input#remove-exif-metadata').click(function() {
            var $checkboxGps = jQuery('input#remove-gps-metadata');
            if (jQuery(this).prop('checked')) {
                gpsPreviousState = $checkboxGps.prop('checked');
                $checkboxGps
                    .attr('disabled', 'disabled')
                    .prop('checked', true);
            } else {
                $checkboxGps
                    .removeAttr('disabled')
                    .prop('checked', gpsPreviousState);
            }
        });

        // Submit form.
        jQuery('button.primary').click(function() {
            var $form = jQuery('form');

            $form.removeAttr('onsubmit');
            $form.children('input[name=actions]').val(JSON.stringify(image.backActionStack));
            if (jQuery('input#remove-gps-metadata:checked').length > 0) {
                $form.children('input[name=remove_gps_metadata]').val(1);
            }
            if (jQuery('input#remove-exif-metadata:checked').length > 0) {
                $form.children('input[name=remove_exif_metadata]').val(1);
            }

            $form.submit();
        });

        function update() {
            // Update resize-width and resize-height.
            if (resized) {
                // Do not update after resizing.
                resized = false;
            } else {
                var width = image.getWidth(),
                    height = image.getHeight();

                jQuery('input#resize-width').val(width);
                jQuery('input#resize-height').val(height);
            }

            disableButton('button#crop');
            jQuery(document).off('keyup', document, cancelCropping);

            // Validate or invalidate undo button and redo button.
            if (image.undoSize() > 0) {
                enableButton('button#undo');
            } else {
                disableButton('button#undo');
            }
            if (image.redoSize() > 0) {
                enableButton('button#redo');
            } else {
                disableButton('button#redo');
            }

            // Disable apply button and reset button in resize function.
            disableButton('button#resize-apply');
            disableButton('button#resize-reset');
        };

        function cancelCropping(event) {
            if (event.keyCode === 27) {
                image.cropCancel();
                // Disable crop button.
                disableButton('button#crop');
            }
        }

        window.image = new ImageEditor('div#image > img', {
            originalWidth: <mt:var name="image_width">,
            originalHeight: <mt:var name="image_height">,
            originalThumbnailWidth: <mt:var name="thumbnail_width">,
            originalThumbnailHeight: <mt:var name="thumbnail_height">,

            plugins: {
                 crop: {
                     postSelect: function() {
                         // Enable crop button.
                         enableButton('button#crop');
                         // Enable escape key.
                         jQuery(document).on('keyup', document, cancelCropping);
                     }
                 },
                 history: {
                     postUpdate: update
                 }
            }
        });
    });

    function enableButton(element) {
        jQuery(element)
            .removeClass('disabled')
            .removeAttr('disabled');
    }
    function disableButton(element) {
        jQuery(element)
            .addClass('disabled')
            .attr('disabled', 'disabled');
    }

    // Enable submit button when clicking checkbox/button.
    var isDirty;
    jQuery('.enable-submit').click(function() {
        enableButton('button.primary');
        isDirty = true;
    });

    // Confirm before closing dialog.
    jQuery('button.image-editor-close-dialog').click(function() {
        if (isDirty) {
            var message = 'You have unsaved changes to this page that will be lost. Are you sure you want to close this dialog?';
            if (confirm(message)) {
                parent.jQuery.fn.mtDialog.close();
            }
        } else {
            parent.jQuery.fn.mtDialog.close();
        }

        return false;
    });
</mt:setvarblock>

