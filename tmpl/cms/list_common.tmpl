function handleMessages( data ) {
  if ( data.error ) {
    showMessage( data.error, 'error');
    return false;
  }
  if ( !data.result ) return false;
  var messages = data.result.messages;
  if ( !data.result.messages ) return true;
  for ( var i=0; i < messages.length; i++ ) {
    var msg   = messages[i];
    showMessage(msg.msg, msg.cls);
  }
  return true;
}

function showMessage( content, cls ){
  if ( typeof content == 'object' ) {
    jQuery('#msg-block').append(
      jQuery('<div>')
        .attr('class', 'msg msg-' + cls )
        .append(content)
        .append('<img alt="<__trans phrase="Close">" src="<mt:var name="static_uri">images/icon_close.png" class="mt-close-msg close-link clickable" />')
    )
  }
  else {
    jQuery('#msg-block').append(
      '<div class="msg msg-' + cls + '">'
      + content
      + '<img alt="<__trans phrase="Close">" src="<mt:var name="static_uri">images/icon_close.png" class="mt-close-msg close-link clickable" />'
      + '</div>');
  }
}

