}

function renderFilterList() {
  jQuery('#dialog_filter_content').empty();
  var has_user_filter = 0;
  var has_sys_filter = 0;
  for (var i = 0, length = filters.length; i < length; i++) {
    if ( parseInt(filters[i].can_save) )
      has_user_filter++;
    else
      has_sys_filter++;
  }

  if ( has_user_filter ) {
    jQuery('<div class="filter-list-block">')
      .append(
        jQuery('<h3 />').text('<__trans phrase="Your Filters">'))
      .append(
        jQuery('<ul id="user-filters" class="editable" />'))
      .appendTo('#dialog_filter_content');
  }
  if ( has_sys_filter ) {
    jQuery('<div class="filter-list-block">')
      .append(
        jQuery('<h3 />').text('<__trans phrase="Built in Filters">'))
      .append(
        jQuery('<ul id="built-in-filters" />'))
      .appendTo('#dialog_filter_content');
  }

  for (var i = 0, length = filters.length; i < length; i++) {
    var filter = filters[i];
    if ( parseInt(filter.can_save) ) {
      var line = '<span class="filter-label unit size2of3"><a href="#'+i+'" class="apply-link '
        + ( filter.can_save ? 'user-filter' : 'system-filter' )
        + '">'+filter.label+'</a></span>'
        + '<span class="filter-ctrl unit size1of3" style="display: none;"><a href="#'+i+'" class="rename-link tool-link"><__trans phrase="Rename"></a><a href="#'+i+'" class="delete-link tool-link icon16 icon-delete"><__trans phrase="Delete"></a></span>';
      jQuery('<li class="filter line" />').append(line).appendTo('#user-filters');
    }
    else {
      var line = '<span class="filter-label"><a href="#'+i+'" class="apply-link '
        + ( filter.can_save ? 'user-filter' : 'system-filter' )
        + '">'+filter.label+'</a></span>';
      jQuery('<li class="filter line" />').append(line).appendTo('#built-in-filters');
    }
  }
  jQuery('.filter').hover(
    function () {
      jQuery(this).find('.filter-ctrl:not(:has(.save))').show();
    },
    function () {
      jQuery(this).find('.filter-ctrl:not(:has(.save))').hide();
    }
  );
  jQuery('#new_filter').click(function() {
    jQuery('#filter-detail').show().parent('#filter').addClass('active');
    jQuery('#item_list').attr('selectedIndex', 0);
    jQuery('.filteritem').remove();
    jQuery('input[name=filter_name]').mtUnvalidate().val('<__trans phrase="New Filter">');
    jQuery('#opener').html('<__trans phrase="New Filter">');
    jQuery('#filter_id').val('');
    jQuery('input[name=filter_id]').val('');
    updateItemList();
    jQuery('#dialog_filter').dialog('close');
    updateFilterSaveButtons({
      system:     0,
      new_filter: 1,
      allpass:    0
    });
  });
  jQuery('#dialog_filter .filter-label a:not(#new_filter)').click(function() {
    jQuery('#dialog_filter').dialog('close');
    jQuery(this).attr('href').match(/#(.*)/);
    var index = RegExp.$1;
    applyFilter(index);
    updateFilterSaveButtons();
    return false;
  });
  jQuery('#dialog_filter .delete-link').click(function() {
    var label = jQuery(this).parents('.filter').find('.apply-link').text();
    var message = trans("Are you sure you want to remove the filter '[_1]'?", label);
    if (confirm(message)) {
      removeFilter(this);
    }
    return false;
  });
