<mt:setvarblock name="js_include" append="1">
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/archetype_editor.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
</mt:setvarblock>
<mt:setvarblock name="html_head" prepend="1">
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/DOM/Proxy.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/SelectionRange.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/Editor.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/Editor/Iframe.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/Editor/Textarea.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <script type="text/javascript" src="<$mt:var name="static_uri"$>js/common/Editor/Toolbar.js?v=<$mt:var name="mt_version_id" escape="url"$>"></script>
  <link rel="stylesheet" type="text/css" href="<$mt:var name="static_uri"$>css/editor/editor.css?v=<$mt:var name="mt_version_id" escape="url"$>" />
</mt:setvarblock>
<mt:setvarblock name="editor_content">
<div id="formatted" class="editor-panel">
  <div id="entry-body-field" class="field">
    <div class="field-content">
      <div id="editor-content-toolbar" class="editor-toolbar toolbar">
        <div class="field-buttons-formatting">
          <span class="font-style">
            <button type="button" title="<__trans phrase="Decrease Text Size" escape="html">" class="command-font-size-smaller toolbar button"><__trans phrase="Decrease Text Size"></button>
            <button type="button" title="<__trans phrase="Increase Text Size" escape="html">" class="command-font-size-larger toolbar button"><__trans phrase="Increase Text Size"></button>
            <button type="button" title="<__trans phrase="Bold" escape="html">" class="command-bold toolbar button"><__trans phrase="Bold"></button>
            <button type="button" title="<__trans phrase="Italic" escape="html">" class="command-italic toolbar button"><__trans phrase="Italic"></button>
            <button type="button" title="<__trans phrase="Underline" escape="html">" class="command-underline toolbar button"><__trans phrase="Underline"></button>
            <button type="button" title="<__trans phrase="Strikethrough" escape="html">" class="command-strikethrough toolbar button"><__trans phrase="Strikethrough"></button>
          <mt:ignore>
            <button type="button" title="<__trans phrase="Text Color" escape="html">" class="command-color toolbar button"><__trans phrase="Text Color"></button>
          </mt:ignore>
          </span>
          <span class="add-link">
            <button type="button" title="<__trans phrase="Link" escape="html">" class="command-insert-link toolbar button"><__trans phrase="Link"></button>
            <button type="button" title="<__trans phrase="Email Link" escape="html">" class="command-insert-email toolbar button"><__trans phrase="Email Link"></button>
          </span>
          <span class="text-style">
            <button type="button" title="<__trans phrase="Begin Blockquote" escape="html">" class="command-indent toolbar button"><__trans phrase="Begin Blockquote"></button>
            <button type="button" title="<__trans phrase="End Blockquote" escape="html">" class="command-outdent toolbar button"><__trans phrase="End Blockquote"></button>
            <button type="button" title="<__trans phrase="Bulleted List" escape="html">" class="command-insert-unordered-list toolbar button"><__trans phrase="Bulleted List"></button>
            <button type="button" title="<__trans phrase="Numbered List" escape="html">" class="command-insert-ordered-list toolbar button"><__trans phrase="Numbered List"></button>
          <mt:ignore>
            <button type="button" title="<__trans phrase="Left Align Item" escape="html">" class="command-enclosure-align-left toolbar button"><__trans phrase="Left Align Item"></button>
            <button type="button" title="<__trans phrase="Center Item" escape="html">" class="command-enclosure-align-center toolbar button"><__trans phrase="Center Item"></button>
            <button type="button" title="<__trans phrase="Right Align Item" escape="html">" class="command-enclosure-align-right toolbar button"><__trans phrase="Right Align Item"></button>
          </mt:ignore>
          </span>
          <span class="text-align">
            <button type="button" title="<__trans phrase="Left Align Text" escape="html">" class="command-justify-left toolbar button"><__trans phrase="Left Align Text"></button>
            <button type="button" title="<__trans phrase="Center Text" escape="html">" class="command-justify-center toolbar button"><__trans phrase="Center Text"></button>
            <button type="button" title="<__trans phrase="Right Align Text" escape="html">" class="command-justify-right toolbar button"><__trans phrase="Right Align Text"></button>
          </span>
          <span class="add-enclosure">
            <a href="<mt:var name="script_url">?__mode=dialog_list_asset&amp;edit_field=<mt:var name="toolbar_edit_field">&amp;blog_id=<mt:var name="blog_id">&amp;filter=class&amp;filter_val=image" title="<__trans phrase="Insert Image" escape="html">" class="command-insert-image toolbar button mt-open-dialog"><__trans phrase="Insert Image"></a>
            <a href="<mt:var name="script_url">?__mode=dialog_list_asset&amp;edit_field=<mt:var name="toolbar_edit_field">&amp;blog_id=<mt:var name="blog_id">" title="<__trans phrase="Insert File" escape="html">" class="command-insert-file toolbar button mt-open-dialog"><__trans phrase="Insert File"></a>
          </span>
          <span class="edit-mode">
          <mt:ignore>
            <button type="button" title="Spell Check" class="command-spell-check toolbar button"><__trans phrase="Check Spelling"></button>
          </mt:ignore>
            <button type="button" title="<__trans phrase="WYSIWYG Mode" escape="html">" mt:command="set-mode-iframe" class="command-toggle-wysiwyg toolbar button"><__trans phrase="WYSIWYG Mode"></button>
            <button type="button" title="<__trans phrase="HTML Mode" escape="html">" mt:command="set-mode-textarea" class="command-toggle-html toolbar button"><__trans phrase="HTML Mode"></button>
          </span>
        </div>
      </div>
      <div id="editor-content-enclosure" class="editor">
        <textarea name="_text_" id="editor-content-textarea" class="text full"></textarea>
        <!-- the iframe bootstraps the js -->
        <$mt:setvar name="delayed_bootstrap" value="1"$>
        <iframe tabindex="3" id="editor-content-iframe" frameborder="0" scrolling="yes" src="<$mt:var name="static_uri"$>html/editor-content.html?cs=<$mt:var name="language_encoding"$>" style="height: <$mt:var name="editor_content_height"$>px"></iframe>
        <input type="hidden" id="editor-input-content" name="text" value="<$mt:var name="text" escape="html"$>" />
        <input type="hidden" id="editor-input-extended" name="text_more" value="<$mt:var name="text_more" escape="html"$>" />
      <mt:ignore>
        <div class="resizer" mt:delegate="resizer" mt:target="editor-content-enclosure" mt:lock="x">
          <img src="<$mt:var name="static_uri"$>images/spacer.gif" width="100%" height="10"/>
        </div>
      </mt:ignore>
      </div>
    </div>
  </div>
</div>
</mt:setvarblock>
