<mt:setvarblock name="page_title"><__trans phrase="Input authorization code" /></mt:setvarblock>
<mt:include name="dialog/header.tmpl">

<mt:If name="error">
<mtapp:statusmsg
   id="generic-error"
   class="error"
   can_close="0">
  <mt:var name="error">
</mtapp:statusmsg>
</mt:If>

<form method="post" action="<mt:var name="script_url">">
  <input type="hidden" name="__mode" value="ga_select_profile" />
  <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
  <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />

  <input type="hidden" name="client_id" value="<mt:Var name="client_id" encode_html="1" />" />
  <input type="hidden" name="client_secret" value="<mt:Var name="client_secret" encode_html="1" />" />

  <input type="text" name="code" />

  <div class="actions-bar">
    <button
       type="submit"
       accesskey="s"
       title="<__trans phrase="Continue (s)">"
       class="action primary button">
      <__trans phrase="Continue">
    </button>
    <button
       type="submit"
       accesskey="x"
       class="cancel action button mt-close-dialog"
       title="<__trans phrase="Cancel (x)">">
      <__trans phrase="Cancel">
    </button>
  </div>
</form>

<mt:include name="dialog/footer.tmpl">
