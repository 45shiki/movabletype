<mt:if name="entry_templates">
<mt:setvarblock name="js_include" append="1">
<script type="text/javascript">
(function($) {

var config  = MT.Editor.TinyMCE.config;
var buttons =
    (config.plugin_mt_wysiwyg_buttons1 || '') + ',|,template';

$.extend(config, {
    plugins: config.plugins + ',template',
    plugin_mt_wysiwyg_buttons1: buttons,
    template_templates: [
    <mt:loop name="entry_templates" glue=",">
        {
            title: "<mt:var name="label" encode_js="1" />",
            src: "<mt:var name="script_url">?__mode=tiny_mce_view_entry_template_text&blog_id=<mt:var name="blog_id">&id=<mt:var name="id" />",
            description: "<mt:var name="description" encode_html="1" nl2br="1" encode_js="1" />"
        }
    </mt:loop>
    ]
});

})(jQuery);
</script>
<script type="text/javascript" src="<mt:var name="static_uri">plugins/EntryTemplateForTinyMCE/extension.js"></script>
</mt:setvarblock>
<mt:setvarblock name="html_head" append="1">
<link rel="stylesheet" href="<mt:var name="static_uri">plugins/EntryTemplateForTinyMCE/skin/ui.css" type="text/css" />
</mt:setvarblock>
</mt:if>
