<mt:include name="dialog/header.tmpl">

<mt:If name="error">
<mtapp:statusmsg
   id="generic-error"
   class="error"
   can_close="0">
  <mt:var name="error">
</mtapp:statusmsg>
</mt:If>

<script type="text/javascript">
(function() {
    var consumerKey = '<mt:Var name="consumer_key" />';
    var consumerSecret = '<mt:Var name="consumer_secret" />';

    if (consumerKey) {
        var $ = window.opener.jQuery;
        $('#flickr_configured_consumer_key').val(consumerKey);
        $('#flickr_configured_consumer_key').val(consumerSecret);
        $.flickrUpdateProfile();
    }

    window.close();
})();
</script>

<mt:include name="dialog/footer.tmpl">

