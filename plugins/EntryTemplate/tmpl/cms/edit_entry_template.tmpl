<mt:if name="id">
<mt:setvar name="page_title" value="<__trans phrase="Edit EntryTemplate">">
<mt:else>
<mt:setvar name="page_title" value="<__trans phrase="Create EntryTemplate">">
</mt:if>
<$mt:setvar name="position_actions_bottom" value="1"$>

<MTSetVarBlock name="system_msg">
<mt:if name="error">
  <mtapp:statusmsg
     id="generic-error"
     class="error"
     can_close="0">
    <mt:var name="error">
  </mtapp:statusmsg>
</mt:if>
<mt:if name="saved">
  <mtapp:statusmsg
     id="saved"
     class="success"
     rebuild="all"
     can_close="0">
    <__trans phrase="Your changes have been saved.">
  </mtapp:statusmsg>
</mt:if>
</MTSetVarBlock>

<mt:setvarblock name="related_content">
    <mtapp:widget
        id="useful-links"
        label="<__trans phrase="Useful links">">
        <ul>
            <li><a href="<mt:var name="script_url">?__mode=list&amp;_type=entry_template&amp;blog_id=<$mt:var name="blog_id"$>"><__trans phrase="Manage Edit Template"></a></li>
        </ul>
    </mtapp:widget>
    <$mtapp:PageActions$>
</mt:setvarblock>

<mt:include name="include/editor_script.tmpl" id="editor_script_include">
<mt:include name="include/header.tmpl">

<form method="post" action="<mt:var name="script_url">" id="edit_entry_template">
  <input type="hidden" name="blog_id" value="<mt:var name="blog_id" escape="html">" />
  <input type="hidden" name="__mode" value="save" />
  <input type="hidden" name="_type" value="<mt:var name="object_type">" />
  <input type="hidden" name="id" value="<mt:var name="id" escape="html">" />
  <input type="hidden" name="return_args" value="<mt:var name="return_args" escape="html">" />
  <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />

  <mtapp:settinggroup id="entry_template-meta">

    <mtapp:setting
       id="label"
       label="<__trans phrase="Label">">
      <input type="text" name="label" id="label" class="text full required" maxlength="100" value="<mt:var name="label" escape="html">" />
    </mtapp:setting>

    <mtapp:setting
       id="description"
       label="<__trans phrase="Description">">
      <textarea name="description" id="description" rows="" cols="" class="text full low"><mt:var name="description" escape="html"></textarea>
    </mtapp:setting>

    <mtapp:setting
       id="text"
       label="<__trans phrase="Text">">
      <textarea name="text" id="text" rows="" cols="" class="text full high"><mt:var name="text" escape="html"></textarea>
    </mtapp:setting>

  </mtapp:settinggroup>

  <mt:setvarblock name="action_buttons">
    <button
       type="submit"
       accesskey="s"
       title="<__trans phrase="Save changes to this entry template (s)">"
       class="save action button primary"
       ><__trans phrase="Save Changes"></button>
  </mt:setvarblock>

  <mt:include name="include/actions_bar.tmpl" bar_position="bottom" hide_pager="1" settings_bar="1">

</form>

<mt:setvarblock name="jq_js_include" append="1">
new MT.EditorManager('text');
jQuery('#edit_entry_template').submit(function () {
    if ( !jQuery(this).find('.required').mtValidate('simple')) {
        return false;
    }
});
</mt:setvarblock>

<mt:include name="include/footer.tmpl">
